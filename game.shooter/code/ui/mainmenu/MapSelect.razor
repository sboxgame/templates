@using Sandbox;
@using Sandbox.UI;
@using System.Linq;

@inherits Panel

<root>
    <PackageList ShowFilters="@true" style="padding-bottom: 50px;" Query="type:map sort:popular" OnSelected="@PackageSelected" Take=@(50)></PackageList>

    <div style="height: 64px;" />
</root>

@code
{
    public System.Action<Package> OnPackageSelected;

    void PackageSelected( Package package )
    {
        OnPackageSelected?.Invoke( package );
    }
}
